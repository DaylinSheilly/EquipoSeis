<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.WidgetInventory.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:theme="@style/Theme.WidgetInventory.AppWidgetContainer"
    android:backgroundTint="@color/transBlack"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/checklist_svgrepo_com"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Inventory"
            android:textColor="@color/orange"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="end"
        android:layout_gravity="center"
        android:layout_marginLeft="12dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Cúanto tengo de inventario?"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15dp"
                />
            <ImageView
                android:id="@+id/totalVisibility"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/eye_open"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/totalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$****"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_marginTop="8dp"
            android:letterSpacing="0.5"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="35dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gestionar Inventario"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:layout_marginTop="8dp"
                />
            <ImageView
                android:id="@+id/goIventory"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/settings_svgrepo_com"
                android:layout_marginLeft="12dp"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>