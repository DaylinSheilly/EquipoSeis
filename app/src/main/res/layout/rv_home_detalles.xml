<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="5dp">

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cvInventory"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            card_view:cardCornerRadius="10dp"
            android:elevation="8dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                >

                <TextView
                    android:id="@+id/nombre_producto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*nombre variable*"
                    android:textColor="@color/transBlack"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/precio_unidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precio Unidad:"
                    android:textColor="@color/transBlack"
                    android:padding="5dp"
                    android:textSize="15sp"
                    card_view:layout_constraintTop_toBottomOf="@+id/nombre_producto"
                    card_view:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/valor_unidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Id: *valor unidad*"
                    android:textColor="@color/darkOrange"
                    android:padding="5dp"
                    android:textSize="15sp"
                    card_view:layout_constraintTop_toBottomOf="@+id/nombre_producto"
                    card_view:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/cantidad_disponible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cantidad Disponible:"
                    android:textColor="@color/transBlack"
                    android:padding="5dp"
                    android:textSize="15sp"
                    card_view:layout_constraintTop_toBottomOf="@+id/precio_unidad"
                    card_view:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/valor_cantidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Id: *valor cantidad*"
                    android:textColor="@color/transBlack"
                    android:padding="5dp"
                    android:textSize="15sp"
                    card_view:layout_constraintTop_toBottomOf="@+id/valor_unidad"
                    card_view:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total:"
                    android:textColor="@color/transBlack"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    card_view:layout_constraintTop_toBottomOf="@+id/cantidad_disponible"
                    card_view:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/valor_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Id: *valor cantidad*"
                    android:textColor="@color/darkOrange"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    card_view:layout_constraintTop_toBottomOf="@+id/valor_cantidad"
                    card_view:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>