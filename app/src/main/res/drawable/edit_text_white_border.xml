<!-- res/drawable/edit_text_border.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state -->
    <item android:state_focused="true">
        <shape>
            <stroke
                android:width="1dp"
            android:color="@color/white" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/gray" />
        </shape>
    </item>
</selector>
